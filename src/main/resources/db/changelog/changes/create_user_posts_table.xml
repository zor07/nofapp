<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
http://www.liquibase.org/xml/ns/pro
http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <changeSet id="202206250921" author="zor">
        <createTable tableName="user_posts">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="int">
                <constraints nullable="false"
                             foreignKeyName="fk_user_id"
                             references="user(id)"/>
            </column>

            <column name="note_id" type="int">
                <constraints nullable="false"
                             foreignKeyName="fk_note_id"
                             references="note(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="202206250924" author="zor">
        <addUniqueConstraint columnNames="user_id, note_id"
                             constraintName="user_note_constraint"
                             tableName="user_posts"/>
    </changeSet>


</databaseChangeLog>